{
  "name": "serendipity",
  "version": "0.0.2",
  "description": "An extensible, out-of-the-box cli",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .ts --max-warnings 0 packages/",
    "test": "jest --no-cache",
    "lerna:build": "lerna run build",
    "lerna:link": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lerna:publish": "lerna publish --no-push --conventional-commits"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuzhanglong/serendipity.git"
  },
  "keywords": [],
  "author": "yuzhanglong",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yuzhanglong/serendipity/issues"
  },
  "homepage": "https://github.com/yuzhanglong/serendipity#readme",
  "dependencies": {
    "@attachments/serendipity-workflows": "~0.0.1",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "execa": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node ./node_modules/@attachments/serendipity-workflows/bin/vcs/preCommit.js",
      "pre-push": "node ./node_modules/@attachments/serendipity-workflows/bin/vcs/prePush.js",
      "commit-msg": "node ./node_modules/@attachments/serendipity-workflows/bin/vcs/commitMessage.js -e $HUSKY_GIT_PARAMS"
    }
  }
}
