{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "bin",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ]
}
